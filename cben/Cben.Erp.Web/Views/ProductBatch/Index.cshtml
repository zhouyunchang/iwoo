@model IEnumerable<Erp.Application.Product.Dto.ProductBatchListDto>
@{
    ViewBag.Title = "钢瓶登记";
}

<h3>钢瓶登记台账</h3>

<p>
    <button type="button" data-toggle="modal" data-target="#addModal" class="btn btn-primary">添加</button>
</p>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">钢瓶登记列表</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="tbProductBatch" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>批号</th>
                                <th>规格/容积</th>
                                <th>工艺号</th>
                                <th>直径</th>
                                <th>压力</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BatchNo</td>
                                        <td>@item.Spec</td>
                                        <td>@item.TechNo</td>
                                        <td>@item.Diameter</td>
                                        <td>@item.Pressure</td>
                                        <td>
                                            <button type="button" data-toggle="modal" data-target="#updateModal" class="btn-modify btn btn-primary" data-id="@item.Id">编辑</button>
                                            <button type="button" class="btn-delete btn btn-danger" data-id="@item.Id">删除</button>
                                            <a href="@Url.Action("ProductProcess", "Product", new { batchId = item.Id })" class="btn btn-info">工序责任人录入</a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section BodyArea {
    <!-- Modal-->
    <div id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 id="addModalLabel" class="modal-title">钢瓶登记</h4>
                </div>
                <div class="modal-body">
                    <form id="addForm">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">批号</label>
                                <div class="col-sm-6">
                                    <input type="text" name="BatchNo" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">规格/容积</label>
                                <div class="col-sm-6">
                                    <input type="text" name="Spec" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">工艺号</label>
                                <div class="col-sm-6">
                                    <input type="text" name="TechNo" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">直径</label>
                                <div class="col-sm-6">
                                    <input type="text" name="Diameter" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">压力</label>
                                <div class="col-sm-6">
                                    <input type="text" name="Pressure" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                    <button type="button" class="btn btn-primary" id="addModal_submit">添加 </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal-->
    <div id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="updateForm">
                    <div class="modal-header">
                        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 id="updateModalLabel" class="modal-title">修改</h4>
                    </div>
                    <div class="modal-body">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">批号</label>
                                <div class="col-sm-6">
                                    <input type="text" id="updateModal_batchNo" name="BatchNo" required="required" class="form-control" />
                                    <input type="hidden" id="updateModal_Id" name="BatchId" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">规格/容积</label>
                                <div class="col-sm-6">
                                    <input type="text" id="updateModal_spec" name="Spec" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">工艺号</label>
                                <div class="col-sm-6">
                                    <input type="text" id="updateModal_techNo" name="TechNo" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">直径</label>
                                <div class="col-sm-6">
                                    <input type="text" id="updateModal_diameter" name="Diameter" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">压力</label>
                                <div class="col-sm-6">
                                    <input type="text" id="updateModal_pressure" name="Pressure" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                        <button type="button" class="btn btn-primary" id="updateModal_submit">保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/parsley")
    <script src="~/Scripts/ProductBatch/ProductBatch.js"></script>
}