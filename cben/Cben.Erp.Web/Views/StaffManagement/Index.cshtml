@{
    ViewBag.Title = "Index";
}

<h2>员工管理</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="col-sm-12">
                        @*<button type="button" data-toggle="modal" data-target="#AddModal" class="btn btn-primary btn-lg">添加</button>*@

                        <a href="#" data-toggle="modal" data-target="#AddModal">添加</a>

                        @*<button type="button" data-toggle="modal" data-target="#AddModal" class="btn btn-square btn-default">添加</button>*@
                    </div>
                </div>
                <div class="panel-body">
                    <table id="datatable4" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>用户名</th>
                                <th>姓名</th>
                                <th>联系号码</th>
                                <th class="sort-alpha">操作</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section BodyArea {
    <!-- Modal-->
    <div id="AddModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 id="myModalLabel" class="modal-title">添加员工</h4>
                    </div>
                    <div class="modal-body">
                        <form id="addform">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">编号</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="UserCode" required="required" class="form-control" />
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">用户名</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="UserName" required="required" class="form-control" />
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">姓名</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="RealName" required="required" class="form-control" />
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">联系号码</label>
                                    <div class="col-sm-6">
                                        <input type="text" name="PhoneNum" data-parsley-type="number" class="form-control" />
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                        <button type="button" class="btn btn-primary" id="addsubmit">添加 </button>
                    </div>
            </div>
        </div>
    </div>

    <!-- Modal-->
    <div id="UpdateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                @*<form>*@
                    <div class="modal-header">
                        <button type="button" data-dismiss="modal" aria-label="Close" class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 id="myModalLabel" class="modal-title">修改员工</h4>
                    </div>
                    <div class="modal-body">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">编号</label>
                                <div class="col-sm-6">
                                    <input type="text" name="required" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">用户名</label>
                                <div class="col-sm-6">
                                    <input type="text" name="email" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">姓名</label>
                                <div class="col-sm-6">
                                    <input type="text" name="number" required="required" class="form-control" />
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">联系号码</label>
                                <div class="col-sm-6">
                                    <input type="text" name="integer" data-parsley-type="number" class="form-control" />
                                </div>
                            </div>
                        </fieldset>

                    </div>
                    <div class="modal-footer">
                        <button type="button" data-dismiss="modal" class="btn btn-default">取消</button>
                        <button type="submit" class="btn btn-primary">保存</button>
                    </div>
                @*</form>*@
            </div>
        </div>
    </div>
}


@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
}
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    @Scripts.Render("~/bundles/parsley")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/UserInfo")*@
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/StaffManagerment/AddUserInfo.js"></script>
}