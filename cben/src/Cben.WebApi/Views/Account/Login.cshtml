@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Bootstrap Admin App + jQuery">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin">
    <title>Angle - Bootstrap Admin Template</title>
    <!-- =============== VENDOR STYLES ===============-->
    <line href="@Url.Content("~/Vendor/fontawesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <line href="@Url.Content("~/Vendor/simple-line-icons/css/simple-line-icons.css")" rel="stylesheet" type="text/css" />
    <!-- =============== BOOTSTRAP STYLES ===============-->
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" id="bscss" />
    <!-- =============== APP STYLES ===============-->
    <link href="@Url.Content("~/Content/app.css")" rel="stylesheet" type="text/css" id="maincss" />
</head>

<body>
    <div class="wrapper">

        <div class="block-center mt-xl wd-xl">
            <!-- START panel-->
            <div class="panel panel-dark panel-flat">
                <div class="panel-heading text-center">
                    <a href="#">
                        <img src="~/Content/Images/logo.png" alt="Image" class="block-center img-rounded" />
                    </a>
                </div>
                <div class="panel-body">
                    <p class="text-center pv">SIGN IN TO CONTINUE.</p>
                    <form role="form" method="post" action="" data-parsley-validate="" novalidate="" class="mb-lg">
                        @Html.AntiForgeryToken()
                        <div class="form-group has-feedback">
                            <input id="exampleInputEmail1" name="UserSuppliedIdentifier" type="text" placeholder="Enter email" autocomplete="off" required="required" class="form-control" />
                            <span class="fa fa-envelope form-control-feedback text-muted"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input id="exampleInputPassword1" name="Password" type="password" placeholder="Password" required="required" class="form-control" />
                            <span class="fa fa-lock form-control-feedback text-muted"></span>
                        </div>
                        <div class="clearfix">
                            <div class="checkbox c-checkbox pull-left mt0">
                                <label>
                                    <input type="checkbox" value="1" name="RememberMe" />
                                    <span class="fa fa-check"></span>Remember Me
                                </label>
                            </div>
                            <div class="pull-right">
                                <a href="@Url.Action("Recover", "Pages")" class="text-muted">Forgot your password?</a>
                            </div>
                        </div>
                        <input type="hidden" name="ReturnUrl" class="" />
                        <input type="submit" class="btn btn-block btn-primary mt-lg" name="submit.Signin" value="Login" />
                    </form>
                    <p class="pt-lg text-center">Need to Signup?</p><a href="@Url.Action("Register", "Pages")" class="btn btn-block btn-default">Register Now</a>
                </div>
            </div>
            <!-- END panel-->
        </div>

    </div>
    <div class="p-lg text-center">
        <span>&copy;</span>
        <span>2016</span>
        <span>-</span>
        <span>Angle</span>
        <br>
        <span>Bootstrap Admin Template</span>
    </div>

    <!-- =============== VENDOR SCRIPTS ===============-->
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Vendor/jQuery-Storage-API/jquery.storageapi.js"></script>
    <script src="~/Vendor/parsleyjs/dist/parsley.min.js"></script>
    <!-- =============== APP SCRIPTS ===============-->
    <script src="~/Scripts/clear-storage.js"></script>

</body>

</html>